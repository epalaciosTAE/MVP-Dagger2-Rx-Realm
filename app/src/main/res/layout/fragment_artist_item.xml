<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    card_view:cardCornerRadius="6dp"
                                    card_view:cardElevation="3dp"
                                    card_view:contentPadding="5dp"
                                    android:layout_marginTop="10dp"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_artist"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            card_view:border_color="#000000"
            card_view:border_width="2dp"/>
        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_toEndOf="@id/img_artist"/>
        <TextView
            android:id="@+id/tv_collection_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toEndOf="@id/img_artist"
            android:layout_below="@id/tv_artist"/>
        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="italic"
            android:layout_toEndOf="@id/img_artist"
            android:layout_below="@id/tv_collection_name"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>